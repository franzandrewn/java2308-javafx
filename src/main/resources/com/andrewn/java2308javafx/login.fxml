<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.andrewn.java2308javafx.LoginController">
    <children>
        <TextField fx:id="loginField" maxWidth="200.0" promptText="Enter login" />
        <PasswordField fx:id="passwordField" maxWidth="200.0" promptText="Enter password" />
        <Button mnemonicParsing="false" onAction="#login" text="Log in" />
        <Label fx:id="errorLabel" style="-fx-text-fill: red;" />
    </children>
</VBox>
